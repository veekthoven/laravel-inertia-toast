  },
  "devDependencies": {
    "@inertiajs/react": "^2.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0"
  },
  "keywords": [
    "laravel",
    "inertia",
    "toast",
    "react",
    "notifications"
  ]
