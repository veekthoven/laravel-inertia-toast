{
  "name": "@laravel-inertia-toast/react",
  "version": "0.1.1",
  "description": "React toast components for Laravel Inertia Toast",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
